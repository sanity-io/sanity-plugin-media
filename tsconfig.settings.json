{
  "compilerOptions": {
    "paths": {
      "@types": ["./src/types"]
    },
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "strict": true,
    "downlevelIteration": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "isolatedModules": true
  }
}
